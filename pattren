Q2.
a) pattern

i=1
 while [ $i -le 5 ]
 do
 j=5
 while [ $j -ge $i ]
 do
 echo -n " "
 j=`expr $j - 1`
 done
 j=1
 while [ $j -le $i ]
 do
 echo -n "*"
 echo -n " "
 j=`expr $j + 1`
 done
 echo " "
 i=`expr $i + 1`
 done
